@{
}
@model Employee

<h1>Edit Employee</h1>

<form asp-action="Edit" asp-controller="Employee" method="post" >
<div>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label class="col-form-label" asp-for="Name"></label>
            <input asp-for="Name" class="form-control"  />
        </div>
        <div class="form-group">
            <label class="col-form-label" asp-for="Age"></label> <input asp-for="Age" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label class="col-form-label" asp-for="HiringDate"></label>
            <input asp-for="HiringDate" class="form-control"  />
            <div class="form-group">
                <label class="col-form-label" asp-for="Salary"></label>
                <input asp-for="Salary" class="form-control"  />
</div>
            <div class="form-group">
                <label class="col-form-label" asp-for="IsActive"></label>
                <input asp-for="IsActive" class="form-control-input"  />
            </div>
            <div class="form-group">
                <label class="col-form-label" asp-for="Address"></label>
                <input asp-for="Address" class="form-control"  />
            </div>
            <div class="form-group">
                <label class="col-form-label" asp-for="gender"></label>
                <input asp-for="gender" class="form-control"  />
            </div>
            <div class="form-group">
                <label class="col-form-label" asp-for="Email"></label>
                <input asp-for="Email" class="form-control"  />
            </div>
         <input type="submit" value ="Save" class="btn btn-primary">Save</input>
        <a asp-action="Index" class="btn btn-light">Cancel</a>


    </div>
 </div>
</form>

@section ScriptValidationSection {
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>>
}
